<%= form_for @pending, url: user_pendings_path(current_user) do |f| %>
  <%= f.text_field :city, placeholder: "City" %>
  <hr>
  <%= f.label "Date and Time" %>
  <%= f.select :year, [[2017, 2017]], prompt: "Year" %>
  <%= f.select :month, (1..12).each.map { |num| [num, num] }, prompt: "Month" %>
  <%= f.select :day, (1..31).each .map { |num| [num, num] }, prompt: "Day" %>
  <%= f.select :hour, (0..23).each.map { |num| [num, num] }, prompt: "Hour" %>
  <%= f.select :minute, (0..59).each.map { |num| [num, num] }, prompt: "Minute" %>
  <hr>
  <%= f.select :activity_id do %>
    <% activity_array = Activity.order(:name).all.map { |activity| [activity.name, activity.id] } %>
    <%= options_for_select([['Others', 0]]) %>
    <%= options_for_select(activity_array) %>
  <% end %>
  <%= f.text_field :activity, placeholder: "If selected 'Other', please specify" %>
  <%= f.submit %> 

<% end %>