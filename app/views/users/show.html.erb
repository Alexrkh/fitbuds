<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <%= image_tag("fitbuds-clear_bg-new-grey.png")%>
  <%= link_to "Edit User Profile", edit_user_path %>
  <a href="#">Dashboard</a>
  <a href="#">Vission</a>
  <a href="#">Contact</a>
  <%= link_to "Back", root_path %>
</div>

<span style="font-size:30px;cursor:pointer" onclick="openNav()" id="f-logo"><%= image_tag("f-clear_bg.png") %></span>

<div id="main">
  <div class="user-details">
    <h2 id="welcome-username">Welcome <%= @user.name %></h2>
      <div class="attributes">
        <p>Email: <%= @user.email %></p>
        <p>City: <%= @user.city %></p>
        <p>State: <%= @user.state %></p>
        <p>Country: <%= @user.country %></p>
        <p>Age Range: <%= @user.age_range %></p>
        <p>Weekly Activity Hours: <%= @user.weekly_activity_hours %></p>
        <p>Stamina: <%= @user.stamina %></p>
        <p>Strength: <%= @user.strength %></p>
        <p>Agility: <%= @user.agility %></p>
        <p>Additional health problems: <%= @user.additional_health_problems %></p>
      </div>
  </div>
</div>



<script>
function openNav() {
    document.getElementById("mySidenav").style.width = "250px";
    document.getElementById("main").style.marginLeft = "250px";
    // document.getElementById("main").fadeOut();
}

function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
    document.getElementById("main").style.marginLeft= "0";
    // document.getElementById("main").fadeIn();
}
</script>
